<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/kertas1"
    android:background="@drawable/pic0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:text="My Math" android:textSize="30sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:typeface="monospace"
        android:textColor="#dbf9f5"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:paddingBottom="16dp"
        android:clickable="true"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Developed by :"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textColorLink="#ffaec1ff"
            android:autoLink="all"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suyono"
            android:gravity="center_horizontal"
            android:textColor="#ffe100"
            android:textColorLink="#ffaec1ff"
            android:autoLink="all"
            android:clickable="false"
            android:typeface="monospace"
            android:id="@+id/dev"/>

    </LinearLayout>

</LinearLayout>